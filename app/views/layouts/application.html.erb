<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
    <div class="notification is-primary global-notification has-text-centered has-text-weight-medium">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="notification is-danger global-notification has-text-centered has-text-weight-medium">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>
        <!-- nav bar -->
    <nav class="navbar is-danger is-mobile is-marginless">
      <div class="navbar-brand">
          <div class="navbar-item">
            <a href="<%= root_path %>">
              <h1 class="title">
                  Private Events
              </h1> 
            </a>
          </div>
          <div class="navbar-burger" id="burger">
              <span></span>
              <span></span>
              <span></span>
          </div>
      </div>
      <div class="navbar-menu" id="nav-links">
          <div class="navbar-end">
            <div class="navbar-item">
              <a  class='button is-black is-outlined' href="<%= events_path %>">
                Events
              </a>
            </div>
              <div class="buttons has-text-weight-bold navbar-item">
                <% if user_signed_in? %>
                  <%= link_to 'My Profile', user_path(current_user), class: 'button is-black is-outlined'%>
                  <%= link_to 'New Event', new_event_path, class: 'button is-black'%>
                  <%= link_to 'Sign out',destroy_user_session_path,  method: :delete , class: 'button is-danger' %>
                <% else %>
                  <%= link_to 'Login', new_user_session_path, class: 'button'%>
                  <%= link_to 'Sign up', new_user_registration_path, class: 'button is-danger' %>
                <% end %>
                </div>
          </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
