<section class="section">
    <div class="container">
        <div class="columns">

            <div class="column is-one-quarter">
                <div class="card">
                    <div class="card-header">
                        <p class="card-header-title">
                        <%= @user.email %>
                        </p>
                        <figure class="image card-header-icon">
                            <img class="is-rounded is64x64" src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
                        </figure>
                    </div>
                </div>
            </div>

            <div class="column is-one-quarter">
                <div class="box">
                    <h2 class='title has-text-centered'>Created Events</h2>
                    <% @user_events.each do |event| %>
                        <div class='notification is-danger is-light'>
                            <h3 class='subtitle'><%= event.title %></h3>
                            <p class="content">
                                <%= event.description %>
                            </p>
                            <small><%= event.location %></small> <br/>
    
                            <small><%= event.date %></small>
                        </div>
                        
                    <% end %>
                </div>
            </div>

            <div class="column is-one-quarter">
                <div class="box">
                    <h2 class='title has-text-centered'>Future Events</h2>
                    <% @user.attended_events.filter {|e| e.date > Date.today }.each do |event| %>
                        <div class='notification is-danger is-light'>
                            <h3 class='subtitle'><%= event.title %></h3>
                            <p class="content">
                                <%= event.description %>
                            </p>
                            <small><%= event.location %></small> <br/>
    
                            <small><%= event.date %></small>
                        </div>
                        
                    <% end %>
                </div>
            </div>

            <div class="column is-one-quarter">
                <div class="box">
                    <h2 class='title has-text-centered'>Past Events</h2>
                    <% @user.attended_events.filter {|e| e.date < Date.today }.each do |event| %>
                        <div class='notification is-danger is-light'>
                            <h3 class='subtitle'><%= event.title %></h3>
                            <p class="content">
                                <%= event.description %>
                            </p>
                            <small><%= event.location %></small> <br/>
    
                            <small><%= event.date %></small>
                        </div>
                        
                    <% end %>
                </div>
            </div>

        </div>
    </div>
</section>