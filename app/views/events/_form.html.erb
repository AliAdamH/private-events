<%= simple_form_for(@event) do |f|%>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Event Title : ", input_html: { class: "input" }, wrapper: false, 
      label_html: { class: 'label' }, placeholder: "Your event's title" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :location, label: "Your event's location : ", input_html: { class: "input" }, wrapper: false, 
      label_html: { class: 'label' }, placeholder: "..." %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description, label: "Describe your event : ", input_html: { class: "textarea " }, wrapper: false, 
      label_html: { class: 'label' }, placeholder: "..." %>
    </div>
  </div>


  <div class="level">
      <div class="level-item is-justify-content-flex-end">
        <%= f.button :submit, class: "button is-danger has-text-weight-medium" %>
      </div>
  </div>
<% end %>