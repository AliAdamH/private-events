<% if @event.errors.any? %>
  <div class="notification is-warning" id="error_explanation">
    <h2 class="title is-4">Your event contains <%= pluralize(@event.errors.count, "error") %></h2>

    <ul>
      <% @event.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @event do |f| %>
  <div class="field">
    <%= f.label :title, 'Your event\'s title: ', class: 'label' %>
    <div class="control">
        <%= f.text_field :title, class: 'input'%>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, 'Describe your event', class: 'label' %>
    <div class="control">
        <%= f.text_area :description, class: 'input'%>
    </div>
  </div>

  <div class="field">
    <%= f.label :location, 'Your event\'s Location: ', class: 'label' %>
    <div class="control">
        <%= f.text_field :location, class: 'input'%>
    </div>
  </div>

  <div class="field">
    <%= f.label :date, 'Your event\'s date: ', class: 'label'%>
    <div class="control">
    <%= f.date_select :date, class:'select' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :time, 'Your event\'s time: ', class: 'label'%>
    <div class="control">
    <%= f.time_select :time, class:'input' %>
    </div>
  </div>

    <div class="level">
      <div class="level-item is-justify-content-flex-end">
        <%= f.submit :Create, class: "button is-danger has-text-weight-medium" %>
      </div>
  </div>
<% end %>